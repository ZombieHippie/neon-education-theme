/* Neon Education Theme by Cole R Lawrence */
.cm-s-edu
  &.CodeMirror
    background: #0C1021
    color: #F8F8F8
  .CodeMirror-selected
    background: #4D4E68 !important
  .CodeMirror-gutters
    background: #0C1021
    border-right: 0
  .CodeMirror-linenumber
    color: #888
  .CodeMirror-cursor
    border-left: 2px solid #F5F4F3 !important
  .cm-punctuation
    color: #EF00AE
  .cm-keyword
    color: #D6FF00
  .cm-atom
    color: #799BCF
  .cm-number
    color: #799BCF
  .cm-def
    color: #8DA6CE
  .cm-variable
    color: #F5F4F3
  .cm-operator
    color: #B95CF6
  .cm-comment
    color: #AEAEAE
  .cm-string
    color: #FF5ED8
  .cm-string-2
    color: #F0D16F
  .cm-meta
    color: #799BCF
  .cm-builtin
    color: #8DA6CE
  .cm-tag
    color: #8DA6CE
  .cm-attribute
    color: #8DA6CE
  .cm-property
    color: #00C2FF
  .cm-header
    color: #FF6400
  .cm-hr
    color: #AEAEAE
  .cm-link
    color: #8DA6CE
  .cm-error
    background: #9D1E15
    color: #F8F8F8
  .CodeMirror-activeline-background
    background: #181C30 !important
  .cm-matchhighlight
  .CodeMirror-matchingbracket
    margin:-1px
    border-radius:.2em
    border:1px solid grey